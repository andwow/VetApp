<Window x:Class="VetApp.Views.ClientProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetApp.Views"
        mc:Ignorable="d"
        Title="ClientProfile" Height="550" Width="1100" Background="SkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Row="1" Grid.RowSpan="15" Grid.Column="1" Grid.ColumnSpan="3" ItemsSource="{Binding Pets}" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Personal code" Binding="{Binding PersonalCode}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}"/>
                <DataGridTextColumn Header="Breed" Binding="{Binding Breed}"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}"/>
                <DataGridTextColumn Header="Marks" Binding="{Binding Marks}"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}"/>
                <DataGridTextColumn Header="Birthday" Binding="{Binding BirthdayString}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="16" Grid.Column="2" x:Name="Refresh" Content="Refresh" Margin="5" Click="Refresh_Click"/>
        <Button Grid.Row="16" Grid.Column="3" x:Name="CreatePet" Content="Add pet" Margin="5" Click="CreatePet_Click"/>

        <TextBlock Grid.Row="1" Grid.Column="5" Text="CNP:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="5" Text="First name:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="5" Text="Last name:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="5" Text="E-mail:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="5" Grid.Column="5" Text="Phone number: " VerticalAlignment="Center"/>
        <TextBlock Grid.Row="6" Grid.Column="5" Text="Country:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="7" Grid.Column="5" Text="State:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="8" Grid.Column="5" Text="City:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="9" Grid.Column="5" Text="Address:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="13" Grid.Column="5" Text="New password: " VerticalAlignment="Center"/>
        <TextBlock Grid.Row="14" Grid.Column="5" Text="Confirm password: " VerticalAlignment="Center"/>

        <TextBox Grid.Row="1" Grid.Column="6" x:Name="Cnp" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.Cnp}"/>
        <TextBox Grid.Row="2" Grid.Column="6" x:Name="FirstName" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.FirstName}"/>
        <TextBox Grid.Row="3" Grid.Column="6" x:Name="LastName" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.LastName}"/>
        <TextBox Grid.Row="4" Grid.Column="6" x:Name="Email" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.Email}"/>
        <TextBox Grid.Row="5" Grid.Column="6" x:Name="Phone" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.Phone}"/>
        <TextBox Grid.Row="6" Grid.Column="6" x:Name="Country" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.Country}"/>
        <TextBox Grid.Row="7" Grid.Column="6" x:Name="State" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.District}"/>
        <TextBox Grid.Row="8" Grid.Column="6" x:Name="City" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.City}"/>
        <TextBox Grid.Row="9" Grid.Column="6" x:Name="Address" Grid.ColumnSpan="2" Margin="5" Text="{Binding CurrentUser.Address}"/>
        <Button Grid.Row="10" Grid.Column="7" x:Name="Modify" Content="Modify" Margin="5" Click="Modify_Click"/>
        <PasswordBox Grid.Row="13" Grid.Column="6" x:Name="NewPassword" Grid.ColumnSpan="2" Margin="5"/>
        <PasswordBox Grid.Row="14" Grid.Column="6" x:Name="ConfirmPass" Grid.ColumnSpan="2" Margin="5"/>
        <Button Grid.Row="15" Grid.Column="7" x:Name="ResetPassword" Content="Reset Password" Margin="5" Click="ResetPassword_Click"/>
        <!--<Button Grid.Row="17" Grid.Column="6" x:Name="Delete" Background="Red" Foreground="White" Content="Delete account" Margin="5" Click="Delete_Click"/>-->
    </Grid>
</Window>
